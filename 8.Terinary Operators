Terinary Operators:
====================


package com.operators.flm;

import java.util.Scanner;

public class terrinaryOperator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner scannerObject = new Scanner(System.in);
		
        System.out.println("Enter first number");
		int a=scannerObject.nextInt();
        
		System.out.println("Enter second number");
        int b=scannerObject.nextInt();
        
        System.out.println("Enter third number");
        int c=scannerObject.nextInt();
        
        //find the highest no between the given
        int  res= ((a>b)&&(a>c))?a:(b > c?b:c);
        
    
        
      //  int highestNumber=(a>b)? a:b;
        
       // int maxnumber=(highestNumber > c) ? highestNumber : c;
        
       // System.out.println("Highest Number "+ maxnumber);
        
        System.out.println("Highest Number "+res);
	}

}


